<resources>
    <!-- Base application theme. -->
    <style name="Theme.UnivApp" parent="Theme.Material3.Light.NoActionBar">
        <item name="materialButtonStyle">@style/AppButtonStyle</item>
    </style>

    <!-- Button style on both light and night mode -->
    <style name="AppButtonStyle" parent="Widget.Material3.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
        <item name="shapeAppearanceOverlay">@style/ButtonShapeAppearance</item>
        <item name="android:elevation">5dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Button with text style on both light and night mode -->
    <style name="AppButtonTextStyle" parent="Widget.Material3.Button.TextButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button.TextButton</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
        <item name="shapeAppearanceOverlay">@style/ButtonShapeAppearance</item>
    </style>

    <style name="ThemeOverlay.App.Button" parent="ThemeOverlay.Material3.Button">
        <!-- Background color -->
        <item name="colorPrimary">@color/primary</item>
        <!-- Text color -->
        <item name="colorOnPrimary">@android:color/white</item>
    </style>

    <style name="ThemeOverlay.App.Button.TextButton" parent="ThemeOverlay.Material3.Button.TextButton">
        <!-- Background color -->
        <item name="colorPrimary">@color/primary</item>
        <!-- Text color -->
        <item name="colorOnSurface">@android:color/white</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/gothampro_bold</item>
        <item name="android:fontFamily">@font/gothampro_bold</item>
    </style>

    <style name="ButtonShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30dp</item>
    </style>
    
    <style name="InputEditText">
        <item name="android:gravity">start</item>
        <item name="android:background">@drawable/round_border</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:textColor">#797979</item>
        <item name="fontFamily">@font/gothampro_medium</item>
        <item name="android:elevation">5dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Remove icon color selection -->
    <style name="ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/primary</item>
    </style>
</resources>
