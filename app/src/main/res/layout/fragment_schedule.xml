<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/schedule_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineVertical1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="30dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineVertical2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="30dp" />

    <ImageView
        android:id="@+id/info_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/round_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/guidelineVertical1"
        app:srcCompat="@drawable/ic_launcher_foreground"
        android:contentDescription="@string/info_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button"
        android:text="@string/info_title"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="@id/info_icon"
        app:layout_constraintStart_toEndOf="@id/info_icon"
        app:layout_constraintEnd_toStartOf="@id/guidelineVertical2"
        app:layout_constraintBottom_toBottomOf="@id/info_icon" />

    <TextView
        android:id="@+id/tvSubjectName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/subject_name_example"
        android:textAlignment="center"
        android:textSize="18sp"
        android:background="@color/muiv_primary"
        app:layout_constrainedWidth="true"
        app:layout_constraintTop_toBottomOf="@id/info_icon"
        app:layout_constraintStart_toEndOf="@id/guidelineVertical1"
        app:layout_constraintEnd_toStartOf="@id/guidelineVertical2"/>

    <TextView
        android:id="@+id/tvSubjectType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/subject_type_example"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/muiv_primary"
        app:layout_constraintTop_toBottomOf="@id/tvSubjectName"
        app:layout_constraintStart_toEndOf="@id/guidelineVertical1"
        app:layout_constraintEnd_toStartOf="@id/guidelineVertical2"/>

    <ImageView
        android:id="@+id/iconDate"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/icon_date"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintStart_toEndOf="@id/guidelineVertical1"
        app:layout_constraintTop_toBottomOf="@id/tvSubjectType" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/date_example"
        app:layout_constraintBottom_toBottomOf="@+id/iconDate"
        app:layout_constraintEnd_toStartOf="@+id/guidelineVertical2"
        app:layout_constraintStart_toEndOf="@+id/iconDate"
        app:layout_constraintTop_toTopOf="@+id/iconDate" />

    <ImageView
        android:id="@+id/iconTeacherName"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/icon_date"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintStart_toEndOf="@id/guidelineVertical1"
        app:layout_constraintTop_toBottomOf="@id/iconDate" />

    <TextView
        android:id="@+id/tvTeacherName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/teacher_name_example"
        app:layout_constraintBottom_toBottomOf="@+id/iconTeacherName"
        app:layout_constraintEnd_toStartOf="@+id/guidelineVertical2"
        app:layout_constraintStart_toEndOf="@+id/iconTeacherName"
        app:layout_constraintTop_toTopOf="@+id/iconTeacherName" />

    <ImageView
        android:id="@+id/iconLocation"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/icon_date"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintStart_toEndOf="@id/guidelineVertical1"
        app:layout_constraintTop_toBottomOf="@id/iconTeacherName" />

    <TextView
        android:id="@+id/tvRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/room_number_example"
        app:layout_constraintBottom_toBottomOf="@id/iconLocation"
        app:layout_constraintEnd_toStartOf="@+id/guidelineVertical2"
        app:layout_constraintStart_toEndOf="@id/iconLocation"
        app:layout_constraintTop_toTopOf="@id/iconLocation" />

    <ImageButton
        android:id="@+id/ibAttendance"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/round_button"
        app:layout_constraintTop_toBottomOf="@id/iconLocation"
        app:layout_constraintEnd_toStartOf="@id/guidelineVertical2"
        android:contentDescription="@string/attendance_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="@string/attendance_text"
        android:textSize="25sp"
        android:textAlignment="center"
        app:layout_constrainedWidth="true"
        app:layout_constraintTop_toTopOf="@id/ibAttendance"
        app:layout_constraintStart_toStartOf="@id/iconLocation"
        app:layout_constraintEnd_toStartOf="@id/ibAttendance"
        app:layout_constraintBottom_toBottomOf="@id/ibAttendance"/>

    <TextView
        android:id="@+id/notesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:text="@string/notes_text"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/ibAttendance"
        app:layout_constraintStart_toEndOf="@id/guidelineVertical1"/>

    <EditText
        android:id="@+id/etNotes"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="start"
        android:hint="@string/notes_hint"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLength="2000"
        android:maxLines="4"
        android:minLines="2"
        android:autofillHints=""
        app:layout_constraintTop_toBottomOf="@id/notesTitle"
        app:layout_constraintStart_toStartOf="@id/guidelineVertical1"
        app:layout_constraintEnd_toStartOf="@id/guidelineVertical2" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constrainedWidth="true"
        app:layout_constraintTop_toBottomOf="@id/etNotes"
        app:layout_constraintStart_toEndOf="@id/guidelineVertical1"
        app:layout_constraintEnd_toStartOf="@id/guidelineVertical2"
        android:text="@string/topic_example"
        android:textAlignment="textStart"/>

</androidx.constraintlayout.widget.ConstraintLayout>